.header{height:55px;line-height:40px;padding-top:15px;border-bottom:1.5px solid rgba(200,200,200,.6);font-size: 14px;position:fixed;top:0px;left:0px;width:100%;z-index:1111;background:#fff;padding-left:40px}
.header text{font-size:12px; color:#fff; display:inline-block; height:20px; padding:0px 10px; background:#FF2E38; line-height:20px; border-radius:12px; margin-left:5px;}
view.header,view.header .tab{ box-sizing: border-box; }
.header .tab{float:left;text-align:center;font-size:14px;color:#9B9B9B;height:100%;margin-right:20px;}
.header .tab.on{border-bottom:1.5px solid rgba(0,0,0,.6);color:#4a4a4a}
.header .filter{width:17px;float:right;margin-top:11px;margin-right:25px;}
.searchBox{margin:10px 32px;height:40px;background: #F2F2F2; border-radius: 50px;position:relative;overflow:hidden}
.searchBox input{margin-left:13px;height:20px;line-height:20px;margin-top:10px;font-size: 15px; color: #4A4A4A;width:100%;}
.arrow{width:7px; height:7px; border-top:2px solid #979797; border-right:2px solid #979797; transform:rotate(-45deg); right:20px; position:absolute; top:20px;}
.orderType{font-size:14px;color:#4A4A4A;float:right;height:42px;line-height:42px;margin-right:30px;position:relative}
.orderType .orderArrow{border-style:solid dashed dashed dashed; border-width:4px; border-color:#9b9b9b transparent transparent transparent; width:0; height:0; float:right; transform:scaleY(2); margin-top:21px; margin-left:10px;}
.arrow.on{top:23px;transform:rotate(135deg);}
.searchBox .arrow{transform:rotate(45deg);top:16px;}
.placeholder{font-size: 11px; color: #4A4A4A;opacity: 0.4;}
.filterBox{height:42px; width:100%; border-bottom:2px solid #f2f2f2; clear:both;}
.filterBox .tab{font-size: 15px; float:left;width:43.5%;height:100%;background:#fff;color:#4a4a4a;font-size: 15px; text-align:center;line-height:60px;}
.filterBox .tab.on{background: #F2F2F2;color:rgba(74,74,74,0.5);}
.searchBtn{width:22px;float:left;height:100%}
.searchBtn image{width:22px;display:block;height:100%;margin-left:30px;margin-top:10px;}
.goodsListBox{margin-top:15px;padding:0px 18px;}
.orderGoodsListBox{border-top:4px solid #f2f2f2;}
.orderGoodsListBox .taskList{padding:0px 18px;}
.taskListBox{overflow:hidden}
.taskListBox.on{height:0px;}
.choseBox{float:left;margin-left:10px;}
.choseBox image{width:17px;height:17px;padding:10px;margin-top:5px;margin-left:-10px;}
.taskList{height:130px;border-bottom:1px solid #f2f2f2;position:relative}
.taskList .choseBox{position:absolute;left:0px;top:50%;margin-top:-20px;}
.taskList .main{float:left;width:95px;height:95px;position:relative;margin-right:15px;margin-top:17.5px;overflow:inherit;margin-left:20px;}
.taskList .info{float:left;width:calc(100% - 140px);margin:15px auto;position:relative;height:100px;}
.taskList .info .name{font-size:14px;color:#4C4C4C;letter-spacing:0.19px;line-height:18px;text-align:left;margin-bottom:3px;-webkit-box-orient: vertical; -webkit-line-clamp: 2; overflow: hidden;text-overflow:ellipsis;display:-webkit-box;}
.taskList .info .sku{font-size: 12px; color: #9B9B9B;height:20px;line-height:20px;}
.taskList .info .upc{font-size:15px;color:#4A4A4A;height:20px;line-height:20px;margin-bottom:2px;margin-top:2px;}
.taskList .info .price{font-size: 14px; color: #4A4A4A;height:20px;line-height:20px;position:absolute;bottom:0px;}
.taskList .info .price text{font-size: 15px;color:#B38E6B;}
.taskList .info .status{border: 1px solid #9DD321; border-radius: 48px;width:66px;height:26px;font-size: 14px; color: #7ED321;text-align:center;position:absolute;right:20px;bottom:2px;line-height:26px}
.angleBits{position:absolute;top:-8px;left:-9px;width:30px;text-align:center;font-size:18px;color:#FFFFFF;height:30px;line-height:30px;}
.angleNum{position:absolute;width:100%;height:100%;left:0px;top:0px;font-size:15px;}
.angleTen{position:absolute;top:-8px;left:-9px;width:34px;text-align:center;font-size:18px;color:#FFFFFF;height:26px;line-height:26px;}
.angleHundred{position:absolute;top:-8px;left:-9px;width:41px;text-align:center;font-size:18px;color:#FFFFFF;height:26px;line-height:26px;}
.taskBarList{height:50px;border-bottom:1.5px solid rgba(200,200,200,.2);border-top:1.5px solid #eee;clear:both;position:relative;}
.timeType{float:left;overflow:hidden;width:30%;margin-left:20px;}
.timeType .title{font-size: 14px; color: #4A4A4A;height:20px;line-height:20px;float:left;width:100%;overflow:hidden;text-overflow:ellipsis;white-space: nowrap;margin-top:6px;}
.timeType .time{font-size: 12px; color: #4A4A4A;height:17px;line-height:17px;clear:left;width:100%}
.assigner{font-size:13px;color:4%;float:left;height:50px;line-height:50px;width:15.5%;margin-right:0%;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.editBtn{height:26px;width:70px;position:absolute;right:16px;bottom:14px;background:rgba(200,200,200,.5); border-radius: 20px;}
.editBtn image{width:20px;float:left;display:block;margin-left:11px;margin-top:4px;}
.editBtn text{background:#B38E6B;border-radius:80px;float:right;display:block;margin-right:3px;height:22px;line-height:22px;margin-top:2px;font-size:14px;color:#fff;text-align:center;padding:0px 5px}
.taskBarList .purchaseNum{width:25%;margin-left:2%;margin-right:2%;texe-align:center;float:left;font-size:13px;color:#4A4A4A;height:50px;line-height:50px;}
.taskBarList .status{float:left;margin-left:4%;margin-right:4%;width:15%;}
.taskBarList .status .statusDes{font-size: 12px; color: #4A4A4A;height:17px;line-height:17px;margin-top:10px;}
.taskBarList .status .scheduleBox{width:100%;border-radius: 6.5px;height:5px;border:0.5px solid #C8C8C8;padding:0px 1px;margin-top:3px;overflow:hidden}
.taskBarList .status .scheduleBox view{background: #FFBA00;height:3px;margin-top:1px;float:left}
.taskBarList .status .scheduleBox .cancel{background: #FF2E38;}
.taskBarList .status .scheduleBox .done{background: #21C7D3;}
.taskListInfo{background:rgba(255,255,255,.95); box-shadow: 1px 2px 15px 0 rgba(163,163,163,0.15);position:fixed;border-top: 1px solid #C8C8C8;border-bottom: 1px solid #C8C8C8;z-index:1111;bottom:0px;left:0px;width:100%;height:83px;}
.taskListInfo .calc{background-image: linear-gradient(-129deg, #E5C297 0%, #A97D43 100%);box-shadow: 0 4px 10px 0 rgba(198,171,146,0.52);border-radius: 20px;text-align:center;width:95px;height:42px;line-height:42px;margin-right:20px;font-size: 14px;color: #FFFFFF;margin-top:20px;float:right}
.taskListInfo .viewCalc{margin-top:20px;float:right;margin-right:7px;background: #FFFFFF; box-shadow: 0 4px 10px 0 rgba(198,171,146,0.28); border-radius: 20px;border:1px solid #A97D43;height:40px;width:93px;color:#4a4a4a;font-size:14px;line-height:40px;text-align:center;}
.taskListInfo .info{float:left;height:100%;margin-left:27px;font-size:12px;color:#9B9B9B;margin-top:7.5px}
.taskListInfo .info .detail{height:35px;line-height:35px;text-align:left;}
.taskListInfo .info .detail text{margin-left:10px;color:#222222;font-size:18px;}
.editBox{padding:0px;background:#fff;height:0px;transition: all 0.2s ease-in-out;overflow:hidden;}
.editBox.on{height:105px;padding:13px 17px;}
.editBox .valueBox .label{font-size: 12px; color: #4A4A4A;}
.editBox .valueBox{display:inline-block;margin-right:25px;}
.editBox .label{width:60px;text-align:right;font-size: 12px;color: #4A4A4A;display:inline-block;}
.editBox .value{display:inline-block;font-size: 12px; color: #222222;margin-left:5px;}
.editBox .value.price{font-size:16px;color:#FF2E38;margin-left:5px;}
.topBox{position:relative;height:30px;line-height:30px;margin-bottom:5px;}
.doneBtn{border: 1px solid #C6AB92; border-radius: 10px;height:20px;width:48px;line-height:20px;text-align:center;color:#C6AB92;font-size:14px;position:absolute;right:0px;top:2px}
.editBox .field{display:inline-block;width:50%;height:30px;line-height:30px;margin-bottom:5px;margin-top:5px;}
.editBox .input{float:right;width:calc(100% - 70px);height:30px;line-height:30px;border: 1px solid #9B9B9B; border-radius: 22px;font-size: 16px; color: #4A4A4A;text-align:center;position:relative}
.editBox .field .input.disable{background:#eee;color:#999;}
.editBox .valueBox .input{width:100px;margin-left:10px}
.editBox .input input{height:100%;width:100%;overflow:hidden;text-overflow:ellipsis;white-space: nowrap;}
.location{width:15px;float:right;position:absolute;top:6px;right:8px;z-index:1111}
.fixedBox{height:66px;position:fixed;bottom:0px;left:0px;width:100%;background:#fff;border-top:1px solid #ddd}
.fixedBox .viewBox{float:left;height:100%;margin:0px 15px;text-align:center;font-size: 14px; color: #4A4A4A;}
.fixedBox .viewBox .amount{font-size:18px;color:#091420;height:35px;line-height:35px;margin-top:3px;}
.fixedBox .viewBox .label{color:#rgba(74,74,74,.5)}
.fixedBox .calcBtn{background-image:linear-gradient(-180deg, #E5C297 0%, #A97D43 100%);border-radius: 10px;width: 100px;height: 45px;line-height: 45px;font-size: 16px; color: #FFFFFF;text-align: center;float: right;margin-top: 10px;margin-right: 20px;}
.transQuantityBox{position:absolute;right:21px;bottom:35px;font-size:12px;color:#9b9b9b;}
.quantityBox{position:absolute;right:21px;bottom:5px;font-size:12px;color:#9b9b9b;}
.quantityBox .tit,.transQuantityBox .tit{vertical-align:middle;height:30px;line-height:30px;margin-right:9px;}
.quantityBox .number,.transQuantityBox .number{background:#B38E6B;border-radius:80px;float:right;display:block;margin-right:3px;height:22px;line-height:22px;margin-top:2px;font-size:14px;color:#fff;text-align:center;padding:0px 5px;min-width:20px}
.quantityBox .number{background:#F5A623}
.number.zero{background:#999 !important}
.batchNo{position:absolute;font-size:12px;color:#666;right:20px;top:48px;}
