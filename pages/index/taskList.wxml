<view class="container">
	<view class="header">
		<image src="{{userInfo.avatarUrl}}" class="avatar"/>
		{{userInfo.nickName}}
		<image mode="widthFix" src="../../images/icon_filter.png" class="filter {{filterBoxShow ? '' : 'on'}}"  bindtap="filterSwitch"/>
		<image mode="widthFix" src="../../images/icon_search.png" class="search {{searchBoxShow ? '' : 'on'}}"  bindtap="searchSwitch"/>
	</view>
	<view style="width:100%;height:54px;"></view>
	<view class="infoBox">
		<view class="infoList">	
			<view class="num">{{taskingNumber}}</view>
			<view class="tit">采购中</view>
		</view>
		<view class="infoList">	
			<view class="num">{{taskDoneNumber}}</view>
			<view class="tit">采购完成</view>
		</view>
	</view>
	<view class="searchBox" wx:if="{{searchBoxShow}}">
		<input placeholder="输入任务名称／分配人／采购人" placeholder-class="placeholder" focus maxlength="30" confirm-type="搜索" bindinput="input" bindconfirm="confirm"/>
		<view class="arrow" bindtap="confirm"></view>
	</view>
	<view class="taskList" wx:for="{{taskList}}" wx:item="{{item}}" wx:key="{{key}}"  bindtap="detail" data-id="{{item.id}}">
		<view class="timeType">
			<view class="title">{{item.taskTitle}}</view>
			<view class="time">{{item.taskStartTimeStr}}</view>
		</view>
		<view class="status">
			<view class="statusDes">{{item.statusDes}}</view>
			<view class="scheduleBox">
				<view class="{{item.statusValue}}" style="width:{{item.schedule}}%"></view>
			</view>
		</view>
		<view class="purchaseNum">
		{{item.allInCount}}/{{item.allCount}}
		</view>
		<view class="assigner">
			{{item.ownerName}}
		</view>
	</view>
</view>
<view class="shadow" wx:if="{{filterBoxShow}}" bindtap="filterSwitch"></view>
<view class="filterBox" wx:if="{{filterBoxShow}}">
	<view class="tit">时间</view>
</view>