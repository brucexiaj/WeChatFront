.pub{position:fixed;width:100%;height:50px;left:0px;bottom:0px;text-align:center;border-top:1px solid rgba(151,151,151,0.4);z-index:11;background:#fff;z-index:1111}
.pub image{width:35px;display:block;margin:auto;margin-top:7.5px}
view{ box-sizing: border-box; } 
.item{ position: relative; width: calc(100% - 40px); margin: 20px;height:115px;} 
.inner .btn{position:absolute;right:18px;top:0;}
.btn image{width:18px;margin-top:30px;margin-bottom:-10px;float:right;clear:both;}
.btn .large{width:22px;margin-right:-2px;}
.inner{ position: absolute; top:0;} 
.inner.contentBox{ background-color: #fff; width: 100%; z-index: 5; padding:0 10rpx; transition: left 0.2s ease-in-out;box-shadow: 0 1px 10px 0 rgba(133,133,133,0.14); border-radius: 20px;height:100%;} 
.inner.BtnBox{height:100%;width: 70px;text-align: center; z-index: 4; right: 0;text-align:center;} 
.inner.BtnBox image{display:block;width:45px;margin:auto;margin-top:10px;}
.mainPic{float:left;margin:9px;width:97px;height:97px;border-radius: 10px;overflow:hidden;}
.contentBox .info{float:left;width:calc(100% - 160px);position:relative;margin-top:10px;}
.contentBox .info .name{font-size:14px;color:#4C4C4C;letter-spacing:0.19px;line-height:18px;text-align:left;margin-bottom:3px;-webkit-box-orient: vertical; -webkit-line-clamp: 2; overflow: hidden;text-overflow:ellipsis;display:-webkit-box;}
.contentBox .info .address{font-size: 13px; color: #B7B7B7;line-height:18px;width:100%;text-align:left;margin-bottom:1px;-webkit-box-orient: vertical; -webkit-line-clamp: 2; overflow: hidden;text-overflow:ellipsis;display:-webkit-box;}
.header{height:55px;line-height:40px;padding-top:15px;border-bottom:1.5px solid rgba(200,200,200,.6);font-size: 12px;position:fixed;top:0px;left:0px;width:100%;z-index:1111;background:#fff}
.header text{font-size: 18px; color: #4A4A4A;margin-right:4px;}
.header .tab{float:left;text-align:center;font-size:12px;color:#9B9B9B;height:100%;width:25%}
.header .tab.on{border-bottom:1.5px solid rgba(0,0,0,.6);}
.header .filter{width:17px;float:right;margin-top:11px;margin-right:25px;}
.info .price{float:left;font-size: 15px; color: #FF2E38;margin-right:5px;height:25px;line-height:25px;}
.info .time{opacity: 0.7; font-size: 12px; color: #4A4A4A;float:left;height:25px;line-height:28px;}
.info .timeIcon{float:left;margin-right:3px;width:12px;margin-top:8px;}
.info .detail{margin-top:2px}
.shadow{position:fixed;width:100%;height:100%;z-index:11;opacity: 0.2;background: #4A4A4A;top:0px;left:0px;}
.filterBox{position:fixed;z-index:111;top:65px;right:20px;width:132px;border-radius: 20px;background: #FFFFFF;overflow:hidden}
.filterBox .listItem{height:35px;line-height:35px;text-align:center;border-bottom:1px solid rgba(151,151,151,.63);font-size: 14px;color: rgba(74,74,74,.5);position:relative}
.filterBox .listItem.on{opaticy:1}
.filterBox .listItem image{width:6px;positon:absolute;top:15px;}
.filterBox .listItem .left{left:37px;}
.filterBox .listItem .right{right:37px;}